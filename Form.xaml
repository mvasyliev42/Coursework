<Window x:Class="Coursework.Form"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Coursework"
        mc:Ignorable="d"
        Title="Form" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="160*"/>
            <RowDefinition Height="40*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150*"/>
            <ColumnDefinition Width="650*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Назва" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Width="88" Height="26"/>
        <Label Content="Кількість" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Center" Width="60" Height="26" Margin="10,0,0,0"/>
        <Label Content="Ціна" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Center" Width="62" Height="26" Margin="10,0,0,0"/>
        <Label Content="Категорія" HorizontalAlignment="Left" Grid.Row="3" VerticalAlignment="Center" Height="26" Width="62" Margin="10,0,0,0"/>
        <Label Content="Сорт" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="4" VerticalAlignment="Center" Height="26" Width="36"/>
        <Label Content="К﻿олір" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="5" VerticalAlignment="Center" Height="25" Width="40"/>
        <Label Content="Опис" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="6" VerticalAlignment="Top" Height="26" Width="38"/>
        <TextBox x:Name="FormName" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="630"/>
        <TextBox x:Name="FormCount" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="630" Grid.Row="1"/>
        <TextBox x:Name="FormPrice" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="630" Grid.Row="2"/>
        <TextBox x:Name="FormType" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="630" Grid.Row="4"/>
        <TextBox x:Name="FormColor" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="630" Grid.Row="5"/>
        <TextBox x:Name="FormDescription" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="630" Grid.Row="6" Height="138"/>
        <Grid Grid.Column="1" Grid.Row="7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="325*"/>
                <ColumnDefinition Width="325*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="Очистити форму" HorizontalAlignment="Center" VerticalAlignment="Center" Width="305" BorderBrush="#FFF44336" Background="#FFF44336"/>
            <Button Grid.Column="1" Content="Зберегти" HorizontalAlignment="Center" VerticalAlignment="Center" Width="305" Background="#FF4CAF50" Click="Button_Click"/>
        </Grid>
        <ComboBox x:Name="FormCategory"
                  DisplayMemberPath="Name"
                  SelectedValuePath="Id"
                  IsTextSearchEnabled="True"
                  Grid.Column="1" 
                  IsEditable="True" 
                  HorizontalAlignment="Left" 
                  Margin="10,8,0,0" 
                  Grid.Row="3" 
                  VerticalAlignment="Top" 
                  Width="315">
        </ComboBox>

    </Grid>
</Window>
